IniciarScreen

#INICIAR
<IniciarScreen>:
    login: login
    senha: senha
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.77,0.77,0.77,1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, .1
            padding: 0, 20, 0, 0
            Image:
                source: 'LogoM.png'
                size: self.texture_size
                size_hint: .57, 2
                pos_hint: {'center_x': 30, 'center_y': -0.2}
        
            Label:
                text: 'CONTROLE GERAL'
                color: 0.18, 0.28, 0.40, 1
                bold: True
                font_size: "28sp"
                size_hint: .8, 1

            Image:
                source: 'LogoCN.png'
                size: self.texture_size
                size_hint: .57, 2.3
                pos_hint: {'center_x': -30, 'center_y': -0.2}

        BoxLayout:
            size_hint: 1, .85
            BoxLayout:
                size_hint: .8, 1
                spacing: "20dp"
                orientation: 'vertical'
                Label:
                    size_hint: .1, .1
                Label:
                    text: 'LOGIN:'
                    size_hint: .4, .05
                    pos_hint: {'center_x': .57, 'center_y': .5}
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    color: 0.18, 0.28, 0.40, 1
                    bold: True
                TextInput:
                    id: login
                    write_tab: False
                    size_hint: .4, .05
                    pos_hint: {'center_x': .57, 'center_y': .5}
                    multiline: False
                Label:
                    text: 'SENHA:'
                    size_hint: .4, .05
                    pos_hint: {'center_x':.57, 'center_y': .5}
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    color: 0.18, 0.28, 0.40, 1
                    bold: True
                TextInput:
                    id: senha
                    password: True
                    size_hint: .4, .05
                    pos_hint: {'center_x': .57, 'center_y': .5}
                    multiline: False
                Label:
                    size_hint: .1, .2
                Button:
                    text: 'INICIAR'
                    background_color: 0.7, 0.56, 0.4, 1
                    text_color: 0.77,0.77,0.77,1
                    pos_hint: {'center_x': .57, 'center_y': .5}
                    size_hint: .4,.1
                    on_press: 
                        app.verifica_user(login.text,senha.text)
                    on_release:
                        root.manager.current = app.user_menu
                        app.erro_login()
                        login.text=""
                        senha.text=""
                    bold: True
                    elevation: 10
            Label:
                size_hint: .1, 1

        BoxLayout:
            size_hint: 1, .2
            padding: '20dp'
            Label:
                size_hint: .85, 1
            Button:
                text: "SAIR"
                size_hint: .15, 1
                width: self.height
                anchor_x: 'right'
                anchor_y: 'bottom'
                on_press:
                    app.stop()
                background_color: 0.7, 0.56, 0.4, 1
                text_color: 0.77,0.77,0.77,1
                bold: True

