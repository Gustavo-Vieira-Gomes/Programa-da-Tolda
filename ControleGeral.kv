#PBEN

<PbenScreen>:
    chave_pesquisa: chave_pesquisa


    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.77,0.77,0.77,1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"

        #Topo
        BoxLayout:
            size_hint: 1, .1
            Image:
                source: 'LogoM.png'
                size: self.texture_size
                size_hint: .57, 2
                pos_hint: {'center_x': 30, 'center_y': -0.2}
        
            Label:
                text: 'BUSCA-ALUNO'
                color: 0.18, 0.28, 0.40, 1
                bold: True
                font_size: "28sp"
                size_hint: .8, 1

            Image:
                source: 'LogoCN.png'
                size: self.texture_size
                size_hint: .57, 2
                pos_hint: {'center_x': -30, 'center_y': -0.2}

        #Corpo
        BoxLayout:
            size_hint: 1, .85
            Label:
                size_hint: .1, 1

            #Interface
            BoxLayout:
                size_hint: .8, 1
                orientation: "vertical"

                #Consulta
                BoxLayout:
                    size_hint: 1, .15
                    spacing: "20dp"

                    Label:
                        size_hint: 1,.2
                    Label:
                        text: 'Número Interno/Nome de Guerra:'
                        size_hint: 1, 1
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        color: 0.18, 0.28, 0.40, 1
                        bold: True
                    TextInput:
                        id: chave_pesquisa
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        size_hint: 1, .4
                        multiline: False
                        text_validate_unfocus: False
                        on_text_validate:
                            app.consulta_pben(self.text)
                            self.text = ''
                    Button:
                        text: 'Consultar'
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        size_hint: 1, .4
                        on_press:
                            app.consulta_pben(chave_pesquisa.text)
                            chave_pesquisa.text = ''
                            chave_pesquisa.focus: True
                        background_color: 0.7, 0.56, 0.4, 1
                        text_color: 0.77,0.77,0.77,1
                        bold: True
                    Label:
                        size_hint: 1,.3

                DadosPrincipais:
                    size_hint: 1, .15

                OutrosDados:
                    text: 'outros dados'
                    size_hint: 1, .45

                Contatos:
                    size_hint: 1, .25

            Label:
                size_hint: .1, 1

    AnchorLayout:
        size_hint: .05, .05
        anchor_x: 'left'
        achor_y: 'bottom'
        Button:
            text: 'Voltar'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
            background_color: 0.7, 0.56, 0.4, 1
            text_color: 0.77,0.77,0.77,1
            bold: True


