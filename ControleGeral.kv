                    background_color: 0.7, 0.56, 0.4, 1
                    text_color: 0.77,0.77,0.77,1
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: .6,.1
                    bold: True
                Button
                    text: 'Acesso à Parte Baixa'
                    on_press: root.manager.current = 'partealta'
                    background_color: 0.7, 0.56, 0.4, 1
                    text_color: 0.77,0.77,0.77,1
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: .6,.1
                    bold: True
                Button
                    text: 'Registro Chefe de Dia'
                    on_press: root.manager.current = 'chefedia'
                    background_color: 0.7, 0.56, 0.4, 1
                    text_color: 0.77,0.77,0.77,1
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: .6,.1
                    bold: True
