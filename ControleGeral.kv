#LICENCAS

<LicencaScreen>:

    chave_pesquisa: chave_pesquisa

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.77,0.77,0.77,1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        Topo_Licenca:
            size_hint: 1, .1

        #Corpo Licenca
        BoxLayout:
            size_hint: 1, .85
            Label:
                size_hint: .1, 1

            #Interface licenca
            BoxLayout:
                size_hint: .8, 1
                orientation: "vertical"

                #Atualiza licenca
                BoxLayout:
                    size_hint: 1, .1
                    Label:
                        size_hint: .125, 1
                    Label:
                        size_hint: .1, 1
                        text: 'Novo status:'
                        color: 0.18, 0.28, 0.40, 1
                        bold: True
                    GridLayout:
                        size_hint: .65, 1
                        spacing: "5dp"
                        rows: 2
                        ToggleButton:
                            group: 'licenca'
                            id: reg_btn
                            text: 'Regresso'
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            background_color: 0.7, 0.56, 0.4, 1
                            text_color: 0.77,0.77,0.77,1
                            bold: True
                            on_state:
                                if self.state == 'down': app.BOTAO_PRESSIONADO = self.text
                                else: app.BOTAO_PRESSIONADO = ''
                        ToggleButton:
                            group: 'licenca'
                            id: lic_ang_btn
                            text: 'Licença Angra'
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            background_color: 0.7, 0.56, 0.4, 1
                            text_color: 0.77,0.77,0.77,1
                            bold: True
                            on_state:
                                if self.state == 'down': app.BOTAO_PRESSIONADO = self.text
                                else: app.BOTAO_PRESSIONADO = ''
                        ToggleButton:
